<UserControl
    x:Class="Liedeinblendung.View.MinistryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Liedeinblendung.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="415"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{materialDesign:MaterialDesignFont}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="1.2*" />
        </Grid.RowDefinitions>

        <TextBox
            Grid.Row="0"
            Margin="20"
            VerticalAlignment="Center"
            materialDesign:HintAssist.Hint="Suche"
            Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

        <DataGrid
            Grid.Row="1"
            Margin="20"
            VerticalAlignment="Top"
            ItemsSource="{Binding Ministries}"
            SelectionMode="Single">

            <DataGrid.Columns>
                <DataGridComboBoxColumn Header="Titel" ItemsSource="{Binding Function}" />
                <DataGridTextColumn Binding="{Binding ForeName}" Header="Vorname" />
                <DataGridTextColumn Binding="{Binding SureName}" Header="Nachname" />
            </DataGrid.Columns>




        </DataGrid>












        <StackPanel
            Grid.Row="5"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <!--<Button Margin="20" Content="Zurücksetzen" >
            </Button>-->
            <Button
                Margin="20"
                Command="{Binding AcceptCommand}"
                Content="Übernehmen"
                IsEnabled="{Binding NumberFalidFlag, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

    </Grid>
</UserControl>
